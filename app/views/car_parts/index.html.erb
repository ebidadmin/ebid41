<% title 'Car Parts' %>

<div class="well">
	<%= link_to 'New', new_car_part_path, :class => 'btn btn-primary' %>
</div>

<%= content_tag :div, page_entries_info(@car_parts), class: 'page-info' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Count</th>
      <th>Creator</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @car_parts.each do |car_part| %>
      <tr>
        <td><%= car_part.id %></td>
        <td><%= link_to car_part.name, car_part %></td>
        <td><%= car_part.line_items.size %></td>
        <td><%= car_part.creator %></td>
        <td>
          <%= link_to 'Edit', edit_car_part_path(car_part), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', car_part_path(car_part), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @car_parts %>

