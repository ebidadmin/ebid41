<%= div_for bid do %>
	<%= bid_amount_helper bid %>
	<%= content_tag :p do %>
		<%= content_tag :span, time_in_words(bid.bid_speed), class: 'small muted' %>
		<%#= content_tag :span, "| #{bid.status}", class: 'small' unless bid.online? %>
		<%#= content_tag :span, bid.bid_type, class: 'small' %>
		<%= link_with_icon_delete '', bid, 'btn-mini btn-danger', true, true if bid.online? %>
	<% end %>
<% end %>