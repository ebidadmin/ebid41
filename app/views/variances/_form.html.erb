<%= simple_form_for @variance, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :user_id %>
  <%= f.input :company_id %>
  <%= f.input :entry_id %>
  <%= f.input :var_company_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                variances_path, :class => 'btn' %>
  </div>
<% end %>
