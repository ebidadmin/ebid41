<% title "Car Models" %>
<%= link_to 'New', new_car_model_path, :class => 'btn btn-large btn-primary' %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Car brand</th>
      <th>Name</th>
      <th>Creator</th>
      <th>Count</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @car_models.each do |car_model| %>
      <tr>
        <td><%= car_model.id %></td>
        <td><%= car_model.car_brand.name %></td>
        <td><%= link_to car_model.name, car_model_path(car_model) %></td>
        <td><%= car_model.creator %></td>
        <td><%= car_model.entries.count %></td>
        <td>
          <%= link_to 'Edit', edit_car_model_path(car_model), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', car_model_path(car_model), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @car_models %>

